@model List<WorkshopHub.Contract.Responses.CategoryResponse>

@{
    ViewData["Title"] = "Manage Categories";
}

<h2>Categories</h2>

<a asp-action="Upsert" class="btn btn-success mb-3">Create New Category</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Workshops Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.WorkshopCount</td>
                <td>
                    <a asp-action="Upsert" asp-route-id="@c.CategoryId" class="btn btn-sm btn-warning">Edit</a>

                    <form asp-action="Delete" method="post" asp-route-id="@c.CategoryId" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this category?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
