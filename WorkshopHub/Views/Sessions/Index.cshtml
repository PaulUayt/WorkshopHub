@model List<WorkshopHub.Contract.Responses.SessionResponse>

@{
    ViewData["Title"] = "Sessions";
}

<h2>Sessions</h2>

<a asp-action="Upsert" class="btn btn-success mb-3">Create New Session</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Start Time</th>
            <th>Workshop</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@s.WorkshopTitle</td>
                <td>
                    <a asp-action="Upsert" asp-route-id="@s.SessionId" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@s.SessionId" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this session?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
