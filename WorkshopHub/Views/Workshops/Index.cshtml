@model List<WorkshopHub.Contract.Responses.WorkshopResponse>

@{
    ViewData["Title"] = "Workshops";
}

<h2>Workshops</h2>

<a asp-action="Upsert" class="btn btn-success mb-3">Create New Workshop</a>
<a asp-controller="Categories" asp-action="Index" class="btn btn-primary mb-3 ms-2">Manage Categories</a>
<a asp-controller="Sessions" asp-action="Index" class="btn btn-info mb-3 ms-2">Manage Sessions</a>
<a asp-controller="Trainers" asp-action="Index" class="btn btn-secondary mb-3 ms-2">Manage Trainers</a>




<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Duration</th>
            <th>Category</th>
            <th>Trainer</th>
            <th>Sessions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var w in Model)
        {
            <tr>
                <td>@w.Title</td>
                <td>@w.Description</td>
                <td>@w.Duration.ToString(@"hh\:mm")</td>
                <td>@w.CategoryName</td>
                <td>@w.TrainerName</td>
                <td>@w.SessionCount</td>
                <td>
                    <a asp-action="Upsert" asp-route-id="@w.WorkshopId" class="btn btn-sm btn-warning">Edit</a>

                    <form asp-action="Delete" method="post" asp-route-id="@w.WorkshopId" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this workshop?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
