@model List<WorkshopHub.Contract.Responses.TrainerResponse>

@{
    ViewData["Title"] = "Trainers";
}

<h2>Trainers</h2>

<a asp-action="Upsert" class="btn btn-success mb-3">Create New Trainer</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trainer in Model)
        {
            <tr>
                <td>@trainer.Name</td>
                <td>@trainer.Email</td>
                <td>@trainer.PhoneNumber</td>
                <td>
                    <a asp-action="Upsert" asp-route-id="@trainer.TrainerId" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@trainer.TrainerId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this trainer?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
